@using UMKM.ViewModels.Models;
@model LoginViewModel;
@{
    Layout = null;
}
<html>

<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true" />
</head>

<body>
    <div class="cf">
        <div class="border card-form shadow-lg">
            <div class="d-flex justify-content-center p-1">
                <p class="fs-5 fw-bold">Login</p>
            </div>
            <form method="post" asp-controller="Auth" asp-action="Login">
                @Html.ValidationMessage("Error", new { @class = "text-danger" })
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Password</label>
                    <input class="form-control" type="password" asp-for="@Model.Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="">
                    <button type="submit" class="btn btn-dark px-4 w100">Login</button>
                    <a asp-controller="Auth" asp-action="register"
                        class="d-flex justify-content-center pt-2">Register</a>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>